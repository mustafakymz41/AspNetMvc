 @model KisiGirisCikisKontrol.Models.Person

<html>
<head>
    <title>
        Kişi Giriş Çıkış Tutma Programı
    </title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h3>Update Customer</h3>
        <form action="/Home/UpdatePerson" method="post">
            <input type="hidden" class="form-control" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label type="text">Customer Name</label>
                <input type="text" name="FirstName" class="form-control" value="@Model.FirstName " />
            </div>
            <div class="form-group">
                <label type="text">Last Name</label>
                <input type="text" name="LastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <label type="text">Tc No</label>
                <input type="text" name="TcNo" class="form-control" value="@Model.TcNo" />
            </div>
            <div class="form-group">
                <label type="text">Hes Kod</label>
                <input type="text" name="HesKod" class="form-control" value="@Model.HesKod" />
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</body>
</html>